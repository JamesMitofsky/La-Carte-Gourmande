---
layout: default
title: Home
---
<main>
  <header id="info-btn"  class="hero-wrapper">
    <h1 class="hero-title">La Carte Gourmande</h1>
    <input id="menu_checkbox">
    <label for="menu_checkbox">
      <div></div>
      <div></div>
      <div></div>
    </label>
  </header>
  <div aria-hidden="true" id="container">{% include "map.svg" %}</div>

  <section class="carousel">
    {%- for card in collections.sortOrder -%}
    <div data-restaurant-name="{{ card.data.title }}" data-place-id="{{ card.data.googlePlacesID }}" class="card" id="{{ card.data.cssID }}-card">
      <h2 class="card-title-wrapper"><span class="card-number {% if card.data.number === 10 %}cart{%- endif -%}">
        {%- if card.data.number === 10 -%}
          {% include "cart.svg" %}
        {%- else -%}
          {{ card.data.number }}
        {%- endif -%}</span>
        <span class="card-title">{{ card.data.title }}</span>
      </h2>
      <img class="restaurant-preview" src="/assets/photos/restaurants/{{ card.data.cssID }}/preview.jpeg" alt="Preview image of {{ card.data.title }}">
      <p>{{ card.data.description }}</p>
      <div class="contact-links">
        
        <a class="map-btn" target="_blank" href="">{% include "map-btn.svg" %}</a>
        <!-- if card.data.tel exists -->
        {%- if card.data.tel -%}
        <a target="_blank" class="tel" href="tel:{{ card.data.tel }}">{% include "tel.svg" %}</a>
        {%- endif -%}
        
        
        {% if card.data.instagramHandle %}
        <a target="_blank" class="svg-link" href="https://www.instagram.com/{{ card.data.instagramHandle }}">{% include "instagram.svg" %}</a>
        {% endif %}
        {% if card.data.facebookHandle %}
        <a target="_blank" class="svg-link" href="https://www.facebook.com/{{ card.data.facebookHandle }}">{% include "facebook.svg" %}</a>
        {% endif %}
        {% if card.data.website %}
        <a target="_blank" class="svg-link" href="{{ card.data.website }}">{% include "website.svg" %}</a>
        {% endif %}
        
      </div>
      <button class="read-more"
        >
        <div class="card-btn btn">Allez-y üçΩ
        </div>
      </button>
    </div>
    {%- endfor -%}
  </section>
</main>

<dialog id="dialog">
  <div class="dialog-content">
    <div class="dialog-header">
      <header>
        <h1>Les Cr√©ateurs</h1>
      </header>
    </div>
      {%- for contributor in collections.contributors -%}
      <div class="contributor">
        <img
        class="profile-picture"
        src="{{ contributor.data.profilePicture }}"
        alt="Profile picture of {{ contributor.data.designerName }}"
        />
      <h2>{{ contributor.data.businessName }}</h2>
        <a target="_blank" href="{{ contributor.data.website }}">
        <subtitle>Explorer le travail de {{contributor.data.designerName}}</subtitle></a
        >
        <p>{{ contributor.data.summary }}</p>
      </div>
    </div>
    {%- endfor -%}
    <button class="btn" id="close-dialog">Revoir la Carte üßë‚Äçüç≥</button>
  </div>
</dialog>
