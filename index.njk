---
layout: default
title: Home
---

<section aria-hidden="true" id="loading">
  <header class="loading-header">
    <h1>La Carte Gourmande</h1>
    <h2>10 adresses pour se régaler à Caen</h2>
  </header>
  {% include "loading.svg" %}
</section>
<main>
  <header class="hero-wrapper">
    <h1 class="hero-title">La Carte Gourmande</h1>
    <nav id="info-btn" class="hero-nav">{% include "info.svg" %}</nav>
  </header>
  <div aria-hidden="true" id="container">{% include "map.svg" %}</div>

  <section class="carousel">
    {%- for card in collections.sortOrder -%}
    <div class="card" id="{{ card.data.cssID }}-card">
      <h2 class="card-title-wrapper">
        <span class="circle"
          ><span class="card-number">{{ card.data.number }}</span></span
        >
        <span class="card-title"> {{ card.data.title }}</span>
      </h2>
      <a
        class="open-map-app"
        target="_blank"
        data-restaurant-name="{{ card.data.title }}"
        onClick="createMapLink()"
        href=""
        >Itinéraire</a
      >
      <p>{{ card.data.description }}</p>
    </div>
    {%- endfor -%}
  </section>
</main>

<dialog id="dialog">
  <div class="dialog-content">
    <div class="dialog-header">
      <header><h1>Les Contributors</h1></header>
    </div>
    {%- for contributor in collections.contributors -%}

    <div class="contributor">
      <h3>{{ contributor.data.designerName }}</h3>
      <p>{{ contributor.data.summary }}</p>
    </div>
    {%- endfor -%}
    <button id="close-dialog">Retourner</button>
  </div>
</dialog>
